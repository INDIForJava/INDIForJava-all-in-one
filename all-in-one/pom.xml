<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.indilib.i4j</groupId>
		<artifactId>i4j</artifactId>
		<version>2.0-SNAPSHOT</version>
	</parent>
	<artifactId>i4j-all-in-one</artifactId>
	<packaging>pom</packaging>
	<name>INDI for Java Server distribution</name>
	<description>INDI for Java Server and client distribution with all core drivers</description>
	<!-- prohibit normal deployment, we will copy the result to sourceforge -->
	<distributionManagement>
		<repository>
			<id>skip</id>
			<url>file://${java.io.tmpdir}</url>
		</repository>
		<snapshotRepository>
			<id>skip</id>
			<url>file://${java.io.tmpdir}</url>
		</snapshotRepository>
	</distributionManagement>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>3.3.0</version>
				<configuration>
					<descriptors>
						<descriptor>src/assembly/src.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-site-plugin</artifactId>
				<configuration>
					<generateReports>true</generateReports>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>wagon-maven-plugin</artifactId>
				<version>${org.codehaus.mojo.wagon-maven-plugin.version}</version>
				<executions>
					<execution>
						<id>upload-to-sourceforge</id>
						<phase>deploy</phase>
						<goals>
							<goal>upload</goal>
						</goals>
						<configuration>
							<serverId>sourceforge-deploy</serverId>
							<fromDir>${project.build.directory}</fromDir>
							<includes>*.zip</includes>
							<url>sftp://frs.sourceforge.net/</url>
							<toDir>/home/frs/project/indiforjava</toDir>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>appassembler-maven-plugin</artifactId>
				<version>1.9</version>
				<configuration>
					<configurationDirectory>etc</configurationDirectory>
					<useWildcardClassPath>true</useWildcardClassPath>
					<programs>
						<program>
							<mainClass>org.indilib.i4j.client.ui.examples.SimpleINDIFrameClient</mainClass>
							<id>client</id>
						</program>
						<program>
							<mainClass>org.indilib.i4j.server.main.INDIBasicServer</mainClass>
							<id>server</id>
							<commandLineArguments>
								<commandLineArgument>-i</commandLineArgument>
								<commandLineArgument>-indiHome</commandLineArgument>
								<commandLineArgument>@BASEDIR@</commandLineArgument>
							</commandLineArguments>
							<jvmSettings>
								<extraArguments>
									<extraArgument>-Xdebug</extraArgument>
									<extraArgument>-Xrunjdwp:server=y,suspend=n,transport=dt_socket,address=4000</extraArgument>
									<extraArgument>-DI4J_HOME=@BASEDIR@</extraArgument>
									<extraArgument>-Dlogback.configurationFile=@BASEDIR@/etc/logback.xml</extraArgument>
								</extraArguments>
								<initialMemorySize>64M</initialMemorySize>
								<maxMemorySize>386M</maxMemorySize>
							</jvmSettings>
						</program>
					</programs>
					<daemons>
						<daemon>
							<id>server</id>
							<wrapperMainClass>org.tanukisoftware.wrapper.WrapperSimpleApp</wrapperMainClass>
							<mainClass>org.indilib.i4j.server.main.INDIBasicServer</mainClass>
							<commandLineArguments>
								<commandLineArgument>-indiHome</commandLineArgument>
								<commandLineArgument>@BASEDIR@</commandLineArgument>
							</commandLineArguments>
							<platforms>
								<platform>jsw</platform>
							</platforms>
							<generatorConfigurations>
								<generatorConfiguration>
									<generator>jsw</generator>
									<configuration>
										<property>
											<name>wrapper.console.loglevel</name>
											<value>WARN</value>
										</property>
										<property>
											<name>wrapper.logfile</name>
											<value>@BASEDIR@/logs/wrapper.log</value>
										</property>
										<property>
											<name>app.base.envvar</name>
											<value>I4J_HOME</value>
										</property>
										<property>
											<name>wrapper.on_exit.0</name>
											<value>SHUTDOWN</value>
										</property>
										<property>
											<name>wrapper.restart.delay</name>
											<value>30</value>
										</property>
									</configuration>
									<includes>
										<include>aix-ppc-32</include>
										<include>aix-ppc-64</include>
										<include>hpux-parisc-64</include>
										<include>linux-x86-32</include>
										<include>linux-x86-64</include>
										<include>linux-ppc-64</include>
										<include>macosx-ppc-32</include>
										<include>macosx-x86-universal-32</include>
										<include>macosx-universal-32</include>
										<include>macosx-universal-64</include>
										<include>solaris-sparc-32</include>
										<include>solaris-sparc-64</include>
										<include>solaris-x86-32</include>
										<include>windows-x86-32</include>
										<include>windows-x86-64</include>
									</includes>
								</generatorConfiguration>
							</generatorConfigurations>
							<jvmSettings>
								<extraArguments>
									<extraArgument>-Xdebug</extraArgument>
									<extraArgument>-Xrunjdwp:server=y,suspend=n,transport=dt_socket,address=4000</extraArgument>
									<extraArgument>-DI4J_HOME=@BASEDIR@</extraArgument>
									<extraArgument>-Dlogback.configurationFile=@BASEDIR@/etc/logback.xml</extraArgument>
								</extraArguments>
								<initialMemorySize>64M</initialMemorySize>
								<maxMemorySize>386M</maxMemorySize>
							</jvmSettings>
						</daemon>
					</daemons>
					<repositoryName>lib</repositoryName>
					<repoPath>lib</repoPath>
					<repositoryLayout>flat</repositoryLayout>
					<assembleDirectory>target/generated-resources/appassembler/jsw/i4j</assembleDirectory>
					<configurationSourceDirectory>src/main/etc</configurationSourceDirectory>
					<copyConfigurationDirectory>true</copyConfigurationDirectory>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>generate-daemons</goal>
							<goal>assemble</goal>
						</goals>
						<phase>prepare-package</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.3.2</version>
				<executions>
					<execution>
						<phase>pre-site</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>java</executable>
							<arguments>
								<argument>-Dlogback.configurationFile=src/site/resources/logback.xml</argument>
								<argument>-classpath</argument>
								<classpath />
								<argument>org.indilib.i4j.server.main.INDIBasicServer</argument>
								<argument>org.indilib.i4j.server.main.INDIBasicServer</argument>
								<argument>-help</argument>
							</arguments>
							<outputFile>${project.build.directory}/help.txt</outputFile>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>i4j-server</artifactId>
			<version>${project.version}</version>
		</dependency>
		<!--dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>driver-examples</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>client-examples</artifactId>
			<version>${project.version}</version>
		</dependency-->
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>i4j-driver-ccd</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>i4j-driver-filterwheel</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>i4j-driver-focuser</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>i4j-driver-raspberrypigpio</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>i4j-driver-telescope</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
	<properties>
		<site.basedir>${project.parent.basedir}</site.basedir>
	</properties>
</project>
