<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<!-- TODO: a jarjar format would be better -->
	<id>distribution</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<files>
		<file>
			<source>LICENSE.txt</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>target/generated-resources/appassembler/jsw/i4j/bin</directory>
			<fileMode>755</fileMode>
			<directoryMode>755</directoryMode>
			<outputDirectory>/bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/generated-resources/appassembler/jsw/server/bin</directory>
			<fileMode>755</fileMode>
			<directoryMode>755</directoryMode>
			<outputDirectory>/bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/generated-resources/appassembler/jsw/server/etc</directory>
			<outputDirectory>/etc</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/generated-resources/appassembler/jsw/server/lib</directory>
			<outputDirectory>/lib</outputDirectory>
		</fileSet>
		<fileSet>
			<!-- creating an empty logs directory -->
			<directory>src/main/logs</directory>
			<outputDirectory>/logs</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>